{
  "name": "Select-to-Explain",
  "description": "Highlight text, click Ask, get a simple explanation (GPT-3.5).",
  "version": "0.1.0",
  "manifest_version": 3,

  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "contextMenus"
  ],

  "host_permissions": [
    "*://*/*",
    "file://*/*"
  ],

  "background": {
    "service_worker": "service_worker.js"
  },
  "commands": {
  "_execute_action": {                
    "suggested_key": { "default": "Alt+E" }
  }
},

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["ui/askButton.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "options_page": "options/options.html",

  "icons": {
    "128": "img/icon128.png"
  },

  "action": {
    "default_title": "Select-to-Explain"
  }
}
